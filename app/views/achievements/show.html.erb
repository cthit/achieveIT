<div class="achievements single-achievement">
    <div class="summary">
        <%= render @achievement %>
        <div>
            <div class="p-inline"><%= markdown @achievement.desc %></div>
            <div><%= @achievement.provider.name %></div>
            <div><%= @achievement.category %></div>
            <div><%= @achievement.points %> points</div>
        </div>
    </div>


    <div>
        <h2>Users with this achievement</h2>
        <ul>
            <% @users.each do |u| %>
                <li><%= link_to u, user_path(u) %></li>
            <% end %>
        </ul>
    </div>
</div>
